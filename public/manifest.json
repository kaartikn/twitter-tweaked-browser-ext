{
    "name": "Twitter-Tweaked",
    "version": "1.0.0",
    "description": "Tweak your Twitter Experience to be for the better!",
    "manifest_version": 3,
    "action": {},
    "host_permission": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "clipboardWrite"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*",
          "https://mobile.twitter.com/*"
        ],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["popup.html" ],
        "matches": [
          "https://twitter.com/*",
          "https://mobile.twitter.com/*"
        ],
        "extension_ids": []
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "author": "kaartiknagarajan",
    "minimum_chrome_version": "88"
}